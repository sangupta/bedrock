{
    "compilerOptions": {
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "jsx": "react",
        "removeComments": true,
        "target": "ESNext",
        "strict": false,
        "rootDir": "./src",
        "incremental": true,
        "lib": [
            "dom",
            "ESNext"
        ],
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true
    },
    "include": [
        "src/**/*.tsx",
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
    ]
}
