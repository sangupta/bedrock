{
    "compilerOptions": {
        "experimentalDecorators": true,
        "declaration": true,
        "allowJs": false,
        "rootDir": "src",
        "baseUrl": "src",
        "resolveJsonModule": true,
        "removeComments": true,
        "sourceMap": true,
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "strict": true,
        "target": "es5",
        "moduleResolution": "node",
        "lib": [
            "dom",
            "es2015",
            "es2016",
            "es2017",
            "esnext"
        ],
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "assets",
        "dist",
        "node_modules",
    ]
}
