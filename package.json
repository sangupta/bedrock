{
  "name": "@sangupta/bedrock",
  "version": "0.0.1",
  "description": "Bedrock: UI Component Library",
  "homepage": "https://bedrock.sangupta.com",
  "source": "src/index.ts",
  "types": "dist/index.d.ts",
  "main": "dist/bedrock.mjs",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/bedrock.mjs",
      "require": "./dist/bedrock.cjs"
    }
  },
  "targets": {
    "main": {
      "source": "src/index.ts",
      "distDir": "dist",
      "context": "browser",
      "isLibrary": true,
      "optimize": true,
      "includeNodeModules": false
    },
    "types": {},
    "css": {
      "source": "src/bedrock.scss",
      "distDir": "dist",
      "context": "browser",
      "isLibrary": true,
      "optimize": true
    }
  },
  "repository": {
    "url": "git+https://github.com/sangupta/bedrock.git",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/sangupta/bedrock/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "tsconfig.json",
    "package.json",
    "README.md",
    "dist/**",
    "src/**"
  ],
  "scripts": {
    "clean": "npx rimraf dist",
    "play": "parcel serve play/playground.html --port 1309",
    "build": "parcel build --target main --target css --target types --no-cache",
    "serve": "parcel serve --target main --target css --port 1309",
    "watch": "parcel watch --target main --target css --no-hmr",
    "test": "jest --config=jest.config.js --maxWorkers=1"
  },
  "author": {
    "name": "Sandeep Gupta",
    "email": "sandy.pec@gmail.com",
    "url": "https://sangupta.com"
  },
  "license": "MIT",
  "peerDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "dependencies": {
    "bootstrap": "^5.3.3"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.0",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.3.4",
    "@types/react-dom": "^18.3.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "parcel": "^2.12.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "ts-jest": "^29.2.5",
    "typescript": "^5.5.4"
  },
  "redefine": {
    "src": {
      "root": "src",
      "includes": [
        "*.ts",
        "*.tsx"
      ]
    },
    "docs": {
      "root": "docs",
      "includes": [
        "*.md"
      ],
      "hasFrontMatter": true,
      "index": "index.md"
    },
    "build": {
      "dist": "dist",
      "publishFolder": "redefine",
      "css": [
        "dist/bedrock.css"
      ],
      "fonts": [],
      "js": []
    },
    "template": {
      "title": "Bedrock Component Library",
      "favicon": "bedrock.png"
    }
  }
}
