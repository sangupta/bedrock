{
  "name": "@sangupta/bedrock",
  "version": "0.0.1",
  "description": "Bedrock: UI Component Library",
  "homepage": "https://bedrock.sangupta.com",
  "source": "src/index.ts",
  "types": "dist/index.d.ts",
  "main": "dist/bedrock.mjs",
  "module": "dist/bedrock.mjs",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/bedrock.mjs"
      },
      "types": "./dist/index.d.ts"
    },
    "./css": "./dist/bedrock.css",
    "./dist/bedrock.css": "./dist/bedrock.css"
  },
  "targets": {
    "main": {
      "source": "src/index.ts",
      "distDir": "dist",
      "context": "browser",
      "isLibrary": true,
      "optimize": true,
      "includeNodeModules": false
    },
    "types": {},
    "css": {
      "source": "src/bedrock.scss",
      "distDir": "dist",
      "context": "browser",
      "isLibrary": true,
      "optimize": true
    }
  },
  "repository": {
    "url": "git+https://github.com/sangupta/bedrock.git",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/sangupta/bedrock/issues"
  },
  "keywords": [
    "react",
    "ui",
    "components",
    "typescript",
    "esm",
    "bootstrap"
  ],
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "clean": "npx rimraf dist",
    "play": "parcel serve play/playground.html --port 1309",
    "build": "parcel build --target main --target css --target types --no-cache",
    "serve": "parcel serve --target main --target css --port 1309",
    "watch": "parcel watch --target main --target css --no-hmr",
    "test": "jest --config=jest.config.js --maxWorkers=1",
    "prepublishOnly": "npm run clean && npm run build && npm run test",
    "validate": "npm run build && npm run test"
  },
  "author": {
    "name": "Sandeep Gupta",
    "email": "sandy.pec@gmail.com",
    "url": "https://sangupta.com"
  },
  "license": "MIT",
  "peerDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "dependencies": {
    "bootstrap": "^5.3.6"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.0",
    "@parcel/packager-ts": "2.15.2",
    "@parcel/transformer-sass": "2.15.2",
    "@parcel/transformer-typescript-types": "2.15.2",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.1.7",
    "@types/react-dom": "^19.1.6",
    "jest": "^30.0.0",
    "jest-environment-jsdom": "^30.0.0",
    "parcel": "^2.15.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "ts-jest": "^29.3.4",
    "typescript": "^5.8.3"
  },
  "redefine": {
    "src": {
      "root": "src",
      "includes": [
        "*.ts",
        "*.tsx"
      ]
    },
    "docs": {
      "root": "docs",
      "includes": [
        "*.md"
      ],
      "hasFrontMatter": true,
      "index": "index.md"
    },
    "build": {
      "dist": "dist",
      "publishFolder": "redefine",
      "css": [
        "dist/bedrock.css"
      ],
      "fonts": [],
      "js": []
    },
    "template": {
      "title": "Bedrock Component Library",
      "favicon": "bedrock.png"
    }
  }
}
