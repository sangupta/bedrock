{
  "name": "@sangupta/bedrock",
  "version": "0.1.0",
  "description": "Bedrock: UI Component Library",
  "homepage": "https://bedrock.sangupta.com",
  "source": "src/index.ts",
  "main": "dist/bedrock.js",
  "module": "dist/bedrock.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "targets": {
    "main": {
      "source": "src/index.ts",
      "context": "browser",
      "isLibrary": true,
      "optimize": true,
      "includeNodeModules": false
    },
    "types": {},
    "css": {
      "source": "src/bedrock.scss",
      "context": "browser",
      "isLibrary": true,
      "optimize": true
    }
  },
  "repository": {
    "url": "git+https://github.com/sangupta/bedrock.git",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/sangupta/bedrock/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "tsconfig.json",
    "dist/**"
  ],
  "scripts": {
    "clean": "npx rimraf dist",
    "play": "parcel serve play/playground.html --port 1309",
    "build": "parcel build --target main --target css --target types",
    "serve": "parcel serve --target main --target css --port 1309",
    "watch": "parcel watch --target main --target css --no-hmr",
    "test": "jest --config=jest.config.js --maxWorkers=1"
  },
  "author": {
    "name": "Sandeep Gupta",
    "email": "sandy.pec@gmail.com",
    "url": "https://sangupta.com"
  },
  "license": "MIT",
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "dependencies": {
    "bootstrap": "^5.2.3"
  },
  "devDependencies": {
    "@jest/globals": "^29.6.2",
    "@parcel/packager-ts": "^2.9.3",
    "@parcel/transformer-sass": "^2.9.3",
    "@parcel/transformer-typescript-types": "^2.9.3",
    "@parcel/types": "^2.9.3",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.3",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^29.6.2",
    "parcel": "^2.9.3",
    "process": "^0.11.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-jest": "^29.1.1",
    "typescript": "^4.9.5"
  },
  "redefine": {
    "src": {
      "root": "src",
      "includes": [
        "*.ts",
        "*.tsx"
      ]
    },
    "docs": {
      "root": "docs",
      "includes": [
        "*.md"
      ],
      "hasFrontMatter": true,
      "index": "index.md"
    },
    "build": {
      "dist": "dist",
      "publishFolder": "redefine",
      "css": [
        "dist/bedrock.css"
      ],
      "fonts": [],
      "js": []
    },
    "template": {
      "title": "Bedrock Component Library",
      "favicon": "bedrock.png"
    }
  }
}
