{
    "name": "bedrock",
    "version": "0.1.0",
    "description": "Bedrock: UI Component Library",
    "homepage": "https://bedrock.sangupta.com",
    "source": "src/index.ts",
    "main": "dist/bedrock.js",
    "types": "dist/index.d.ts",
    "type": "module",
    "targets": {
        "main": {
            "source": "src/index.ts"
        },
        "css": {
            "source": "src/bedrock.scss"
        }
    },
    "repository": {
        "url": "https://github.com/sangupta/bedrock",
        "type": "git"
    },
    "bugs": {
        "url": "https://github.com/sangupta/bedrock/issues"
    },
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "tsconfig.json",
        "dist/**"
    ],
    "scripts": {
        "clean": "npx rimraf dist",
        "playground": "parcel serve src/playground.html --port 1309",
        "build": "parcel build --target main --target css",
        "serve": "parcel serve --target main --target css --port 1309",
        "watch": "parcel serve --target main --target css --port 1309 --no-hmr",
        "tsc": "tsc --noEmit"
    },
    "author": {
        "name": "Sandeep Gupta",
        "email": "sandy.pec@gmail.com",
        "url": "https://sangupta.com"
    },
    "license": "Apache-2.0",
    "peerDependencies": {
        "react": "^17.0.2",
        "react-dom": "^17.0.2"
    },
    "dependencies": {
        "bootstrap": "^5.1.3"
    },
    "devDependencies": {
        "@parcel/types": "^2.5.0",
        "@parcel/transformer-sass": "^2.5.0",
        "@parcel/transformer-typescript-types": "^2.5.0",
        "@types/react": "^17.0.41",
        "@types/react-dom": "^17.0.14",
        "parcel": "^2.5.0",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "typescript": "^4.6.4"
    }
}
